{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2019",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "module": "commonjs",
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ]
  }
}
